    if (!jQuery('#edit_form').valid()) {
        return false;
    }
    codeElement = $F(codeElement);
    themeElement = $F(themeElement);

    setLocation(new Template(urlTemplate, /(^|.|\r|\n)({{(\w+)}})/).evaluate({
        'code': codeElement,
        'theme_id': themeElement
    }));
}
